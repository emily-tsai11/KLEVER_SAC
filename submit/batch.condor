universe					= vanilla

log							= log/$(macro).log
output						= out/$(macro).out
error						= err/$(macro).error

should_transfer_files		= YES
when_to_transfer_output		= ON_EXIT

environment					= LD_LIBRARY_PATH=/cvmfs/sft.cern.ch/lcg/contrib/gcc/6.3/x86_64-slc6/lib64
executable					= batch.sh
transfer_executable			= TRUE
arguments					= KLMC_SAC $(macro)
transfer_input_files		= ../build/KLMC_SAC, ../build/macros/$(macro).mac

+JobFlavour					= "tomorrow"

queue $(macro) from batch.in
